<div class="flex flex-col items-center">
  <div class="mx-5 max-w-sm md:max-w-lg mt-12 md:mt-20">
    <%= image_tag 'splash.png', class: 'mb-5' %>
    <h2 class="text-2xl mb-4 font-bold lowercase text-center whitespace-nowrap tracking-[.3rem] text-blue-400">forgot password?</h2>
  
    <div class="p-8 mb-4 bg-sky-200 border-2 border-blue-400 rounded-2xl shadow-blue-50">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, data: { turbo: false } }) do |f| %>
        <div class="mb-3">
          <%= f.label :email, class: 'font-medium text-sm tracking-wider text-gray-700' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'py-2 px-4 block w-full border-2 border-blue-400 rounded-md appearance-none focus:outline-none leading-normal' %>
          <%= render 'devise/shared/error_messages', resource: resource, param_type: :email %>
        </div>
  
        <div class="flex justify-center">
          <%= f.submit "Reset Password", class: 'btn-primary' %>
        </div>
      <% end %>
    </div>
  
    <div class="text-sm text-center mb-12">
      <p class="mb-1 text-gray-700"><%= link_to 'Log in', new_session_path(resource_name), class: 'text-blue-400' %></p>
      <p class="text-gray-700"><%= link_to 'Create an account', new_registration_path(resource_name), class: 'text-blue-400' %></p>
    </div>
  </div>
</div>