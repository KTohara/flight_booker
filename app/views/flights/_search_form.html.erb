<div class="mb-4 flex-col md:flex items-center gap-2">
  <%= form_with url: flights_path, method: :get do |f| %>
    <div class="flex flex-col md:flex-row gap-1 items-center">
      <%= f.label 'Departing from?' %>
      <%= f.collection_select :departure_airport_id, @airports, :id, :location %>
    </div>
  
    <div class="flex flex-col md:flex-row gap-1 items-center">
      <%= f.label 'Going to?' %>
      <%= f.collection_select :arriving_airport_id, @airports, :id, :location %>
    </div>
  
    <div class="flex flex-col md:flex-row gap-1 items-center">
      <%= f.label :passenger_count, 'Passengers' %>
      <%= f.select :passenger_count, [1, 2, 3, 4] %>
    </div>
  
    <div class="flex flex-col md:flex-row gap-1 items-center">
      <%= f.label :date %>
      <%= f.date_field :date %>
    </div>

    <div class="flex justify-center mt-3 md:mt-0 items-center">
      <%= f.submit 'Get Flights' %>
    </div>
  <% end %>
</div>

