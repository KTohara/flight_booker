<div class="mx-5 max-w-lg md:max-w-3xl mt-3 md:mt-12">
  <%= image_tag 'splash.png', class: 'mb-5 px-6 md:px-0' %>
  <div class="md:px-28 flex flex-col place-items-center md:place-items-stretch space-y-2 border-2 border-blue-400 rounded-xl bg-white">
    <%= form_with model: airports, url: flights_path, method: :get, remote: true do |f| %>
      <div class="md:flex justify-between gap-4 mt-5">
        <div class="flex items-center gap-3 mb-3">
          <i class="text-blue-500 fa-solid fa-plane-departure"></i>
          <%#= f.select :departing_airport_id, options_for_select(@airports, selected: params[:departing_airport_id]) %>
          <%= f.collection_select :departing_airport_id, airports, :id, :location, { selected: params.dig(:airport, :departing_airport_id), prompt: 'Departing from?' }, class: 'rounded-xl text-gray-600' %>
        </div>
        <div class="flex items-center gap-3 mb-3">
          <i class="text-blue-500 fa-solid fa-plane-arrival"></i>
          <%#= f.select :arriving_airport_id, options_for_select(@airports, selected: params[:arriving_airport_id]) %>
          <%= f.collection_select :arriving_airport_id, airports, :id, :location, { selected: params.dig(:airport, :arriving_airport_id), prompt: 'Going to?'}, class: 'rounded-xl text-gray-600' %>
        </div>
      </div>
      <div class="md:flex justify-between gap-4 mt-3">
        <div class="flex items-center gap-3 mb-3">
          <i class="text-blue-500 fa-solid fa-user mx-1"></i>
          <%= f.select :passenger_count, 1..4, { selected: params.dig(:airport, :passenger_count), prompt: 'Passengers' }, class: 'rounded-xl text-gray-600' %>
        </div>
        <div class="flex items-center gap-3 mb-3 mr-7">
          <i class="text-blue-500 fa-regular fa-calendar mx-1"></i>
          <%= f.date_field :date, value: params.dig(:airport, :date), class: 'rounded-xl text-gray-600' %>
        </div>
      </div>
      <div class="flex justify-center mb-3 items-center">
        <%= f.submit 'Get Flights', class: "btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

