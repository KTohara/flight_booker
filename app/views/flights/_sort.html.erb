<div class="flex justify-end">
  <div class="mt-3 mr-2 w-[130px]">
    <%= form_with model: airports, url: flights_path, method: :get, id: "sort" do |f| %>
      <%= f.hidden_field :departing_airport_id, value: params[:airport][:departing_airport_id] %>
      <%= f.hidden_field :arriving_airport_id, value: params[:airport][:arriving_airport_id] %>
      <%= f.hidden_field :passenger_count, value: params[:airport][:passenger_count] %>
      <%= f.hidden_field :date, value: params[:airport][:date] %>
      <%= f.select :sort, options_for_select(sort_options, selected: params[:sort]), { include_blank: 'Sort by:'}, { class: 'rounded-t-xl border-b-0 border-blue-400 text-gray-500', onchange: "this.form.requestSubmit()"} %>
    <% end %>
  </div>
</div>