<div class="group">
  <div class="mx-5 flex justify-between">
    <p class="mb-3 sm:pl-4 text-xs text-gray-800 ">DEPARTS: <%= flight.departure_date.strftime('%a, %b %-d') %></p>
    <p class="mb-3 text-xs text-gray-800 ">ARRIVES: <%= (flight.departure_date + flight.duration.hours).strftime('%a, %b %-d') %></p>
  </div>
  <div class="mx-5 sm:mx-0 flex justify-between">
    <div class="flex flex-col items-end basis-1/3">
      <p class="text-lg font-bold text-gray-800"><%= flight.departure_time.strftime('%l:%M%P') %></p>
      <p class="text-lg tracking-wide text-gray-800"><%= flight.departing_airport.code %></p>
    </div>
    <div class="mx-5 flex flex-col basis-3/5 items-center justify-center relative">
      <p class="-mt-7 mb-3 sm:pl-4 text-xs text-gray-800 whitespace-nowrap">DURATION: <%= pluralize(flight.duration, 'hour') %></p>
      <i class="fa-solid fa-plane absolute top-5 text-blue-500 ease-in-out duration-1000 group-hover:rotate-[360deg] group-hover:scale-150"></i>
      <hr class="mx-auto w-full border-t-[3px] bg-gray-300 rounded">
    </div>
    <div class="flex flex-col items-start basis-1/3">
      <p class="text-lg font-bold text-gray-800"><%= (flight.departure_time + flight.duration.hours).strftime('%l:%M%P') %></p>
      <p class="text-lg tracking-wide text-gray-800"><%= flight.arriving_airport.code %></p>
    </div>
  </div>
</div>